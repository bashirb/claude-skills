{
  "name": "bashirb-claude-kit",
  "owner": {
    "name": "Bashir Bashir",
    "email": ""
  },
  "metadata": {
    "description": "A curated collection of Claude Code skills",
    "version": "1.0.0"
  },
  "plugins": [
    {
      "name": "bashirb-claude-kit",
      "description": "All available skills in this collection",
      "source": "./",
      "strict": false,
      "commands": [
        "./.claude/commands/primer.md"
      ],
      "skills": [
        "./.claude/skills/pr-review"
      ],
      "agents": [
        "./.claude/agents/code-reviewer.md",
        "./.claude/agents/documentation-manager.md",
        "./.claude/agents/validation-agent.md"
      ],
      "hooks": {
        "PostToolUse": [
          {
            "matcher": "Edit|Write|MultiEdit",
            "hooks": [
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/.claude/hooks/log-tool.sh",
                "description": "Automatically logs file edits",
                "async": true
              }
            ]
          }
        ]
      }
    }
  ]
}
